{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "ordered-imports": [
            false,
            {
              "import-sources-order": "any",
              "named-imports-order": "any"
            }
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "only-arrow-functions": false,
        "quotemark": [true, "single", "jsx-double"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}